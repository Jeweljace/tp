@startuml
title Parsing command (Parser constructs AddMeasurementCommand)

skinparam shadowing false
skinparam defaultFontName Arial
skinparam sequenceMessageAlign center

actor User
participant ":Ui" as Ui #E3F2FD
participant ":Parser" as Par #E8F5E9
participant ":AddMeasurementCommand" as AddM #E8F5E9

User -> Ui : enter "measure waist/70 hips/98 chest/90 thigh/55 arm/30"
activate Ui
Ui -> Par : parse("measure waist/70 hips/98 chest/90 thigh/55 arm/30")
activate Par

create AddM
Par -> AddM ++ : AddMeasurementCommand(70, 98, 90, 55, 30)

' Return the constructed command to the UI
Par -->> Ui : Command (AddMeasurementCommand)

deactivate Par
deactivate Ui
@enduml
